@model FileModel

<div class="modal-header">
    <h5 class="modal-title" id="uploadModalLabel">Upload File</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="uploadForm" method="post" enctype="multipart/form-data" action="/Payroll/Upload">
        <input type="hidden" name="SiteId" value="@Model.SiteId" />
        <div class="mb-3">
            <label for="formFile" class="form-label">Choose file</label>
            <input class="form-control" type="file" id="formFile" name="UploadFile">
            <div class="text-danger" id="fileError">@Html.ValidationMessageFor(m => m.UploadFile)</div>
        </div>
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="text-success">@ViewBag.SuccessMessage</div>
        }
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
