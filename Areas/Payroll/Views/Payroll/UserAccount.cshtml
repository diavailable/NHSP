@model NHSP.Models.Users
@{
    ViewData["Title"] = "Register";
}

<head>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<h1 style="text-align:center">User Approval</h1>

<div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center text-uppercase">Name</th>
                <th class="text-center text-uppercase">Position</th>
                <th class="text-center text-uppercase">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Account != null)
            {
                foreach (var a in ViewBag.Account)
                {
                    <tr>
                        <td class="text-center text-nowrap">@a.FirstName @a.LastName</td>
                        <td class="text-center text-nowrap">@a.Position</td>
                        <td class="d-flex justify-content-center">
                            <form asp-action="UserApprove" asp-controller="Payroll" asp-area="Payroll">
                                <input type="hidden" name="userId" value="@a.UserId"/>
                                <input type="hidden" name="status" value="Active"/>
                                <button type="submit" class="btn btn-success py-0">Approve</button>
                            </form>
                            <div class="mx-1"></div>
                            <form asp-action="UserApprove" asp-controller="Payroll" asp-area="Payroll">
                                <input type="hidden" name="userId" value="@a.UserId"/>
                                <input type="hidden" name="status" value="Declined"/>
                                <button type="submit" class="btn btn-danger py-0">Decline</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center text-nowrap">if symptoms persists</td>
                    <td class="text-center text-nowrap">consult it koi!?</td>
                </tr>
            }
        </tbody>
    </table>
</div>