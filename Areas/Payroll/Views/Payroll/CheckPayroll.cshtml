@model NHSP.Areas.Payroll.Models.FileModel
@{
    ViewData["Title"] = "Request Payroll";
}
<head>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h1 style="text-align:center">Check Payroll</h1>
    <div style="overflow-x: auto; max-width: 100%;">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center text-uppercase">Site</th>
                    <th class="text-center text-uppercase">File</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.payroll != null)
                {
                    foreach (var sr in ViewBag.payroll)
                    {
                        <tr>
                            <td class="text-center text-nowrap">@sr.Sitename</td>
                            @if (sr.Payroll == 4 && sr.FileStatus == 2)
                            {
                                <td class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-primary py-0" id="preview_@sr.SiteId" data-siteid="@sr.SiteId" data-filetype="Payroll">Preview</button>
                                    <div class="mx-1"></div>
                                    <button type="button" class="btn btn-success py-0" data-bs-toggle="modal" data-bs-target="#approveModal_@sr.SiteId">Approve</button>
                                    <div class="mx-1"></div>
                                    <button type="button" class="btn btn-danger py-0" data-bs-toggle="modal" data-bs-target="#declineModal_@sr.SiteId">Decline</button>

                                    <div class="modal fade" id="approveModal_@sr.SiteId" tabindex="-1" aria-labelledby="approveModalLabel_@sr.SiteId" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="approveModalLabel_@sr.SiteId">Confirm Approval</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to approve?
                                                </div>
                                                <div class="modal-footer">
                                                    <form asp-action="Approvepr" asp-controller="Payroll" asp-area="Payroll">
                                                        <input type="hidden" name="siteId" value="@sr.SiteId" />
                                                        <button type="submit" class="btn btn-success py-0" data-siteid="@sr.SiteId">Confirm</button>
                                                        <button type="button" class="btn btn-secondary py-0" data-bs-dismiss="modal">Cancel</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal fade" id="declineModal_@sr.SiteId" tabindex="-1" aria-labelledby="declineModalLabel_@sr.SiteId" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="declineModalLabel_@sr.SiteId">Confirm Approval</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to decline?
                                                </div>
                                                <div class="modal-footer">
                                                    <form asp-action="Declinepr" asp-controller="Payroll" asp-area="Payroll">
                                                        <input type="hidden" name="siteId" value="@sr.SiteId" />
                                                        <button type="submit" class="btn btn-success py-0" data-siteid="@sr.SiteId">Confirm</button>
                                                        <button type="button" class="btn btn-secondary py-0" data-bs-dismiss="modal">Cancel</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            }
                            else if (sr.Payroll == 4 && sr.FileStatus == 5)
                            {
                                <td class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-primary py-0" id="preview_@sr.SiteId" data-siteid="@sr.SiteId" data-filetype="Payroll">Preview</button>
                                    <div class="mx-1"></div>
                                    <button type="button" class="btn btn-success py-0" data-bs-toggle="modal" data-bs-target="#approveModal_@sr.SiteId">Approve</button>
                                    <div class="mx-1"></div>
                                    <button type="button" class="btn btn-danger py-0" data-bs-toggle="modal" data-bs-target="#declineModal_@sr.SiteId">Decline</button>

                                    <div class="modal fade" id="approveModal_@sr.SiteId" tabindex="-1" aria-labelledby="approveModalLabel_@sr.SiteId" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="approveModalLabel_@sr.SiteId">Confirm Approval</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to approve?
                                                </div>
                                                <div class="modal-footer">
                                                    <form asp-action="Approvepr" asp-controller="Payroll" asp-area="Payroll">
                                                        <input type="hidden" name="siteId" value="@sr.SiteId" />
                                                        <button type="submit" class="btn btn-success py-0" data-siteid="@sr.SiteId">Confirm</button>
                                                        <button type="button" class="btn btn-secondary py-0" data-bs-dismiss="modal">Cancel</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal fade" id="declineModal_@sr.SiteId" tabindex="-1" aria-labelledby="declineModalLabel_@sr.SiteId" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="declineModalLabel_@sr.SiteId">Confirm Approval</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to decline?
                                                </div>
                                                <div class="modal-footer">
                                                    <form asp-action="Declinepr" asp-controller="Payroll" asp-area="Payroll">
                                                        <input type="hidden" name="siteId" value="@sr.SiteId" />
                                                        <button type="submit" class="btn btn-success py-0" data-siteid="@sr.SiteId">Confirm</button>
                                                        <button type="button" class="btn btn-secondary py-0" data-bs-dismiss="modal">Cancel</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            }
                            else
                            {
                                <td class="d-flex justify-content-center">
                                    N/A
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-center text-nowrap">if issue persist contact IT</td>
                        <td class="text-center text-nowrap">https://www.facebook.com/adrian.d2nd</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="previewModalBody">
                    <!-- Content will be loaded here dynamically -->
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('button[id^="preview_"]').click(function (event) {
            event.preventDefault();
            var siteid = $(this).data("siteid");
            var filetype = $(this).data("filetype");

            $.ajax({
                url: "/Payroll/Payroll/PRpreview",
                type: "GET",
                data: { siteId: siteid, fileType: filetype },
                success: function (data) {
                    $("#previewModalBody").html(data);
                    var previewModal = new bootstrap.Modal(document.getElementById("previewModal"));

                    previewModal.show();
                },
                error: function () {
                    alert("Failed to load the modal content.");
                }
            });
        });

        $('#previewModal').on('shown.bs.modal', function () {
            $(this).removeAttr('aria-hidden');
            $(this).find('button, input, a, select, textarea').first().focus();
            console.log("Modal is fully visible.");
        });

        $('#previewModal').on('hidden.bs.modal', function () {
            $(this).removeAttr('aria-hidden'); 
            $('body').focus();  
            console.log("Modal is fully hidden.");
        });
    });
</script>